source 'https://rubygems.org'
ruby '2.3.0'

gem 'puma'
gem 'rack-timeout'

# rails/api
gem 'rails', '4.2.5'
gem 'rails-api'
gem 'rack-cors', :require => 'rack/cors'

# caching
gem 'redis'
gem 'redis-rails'

# database
gem 'pg'

# authentication
gem 'devise'

group :development do
  gem 'spring'
  gem 'annotate'
end

group :test do
  gem 'mock_redis'
end

group :production do
  gem 'rails_12factor'
end

